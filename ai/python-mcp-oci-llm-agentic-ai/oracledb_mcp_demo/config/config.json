{
  "logging": {
    "level": "INFO",
    "log_llm_requests": false,
    "log_llm_responses": false,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "llm": {
    "provider": "oci",
    "openai": {
      "api_key": "${openai_mcp_api_key}",
      "model": "gpt-5-mini"
    },
    "oci": {
      "endpoint": "https://inference.generativeai.us-chicago-1.oci.oraclecloud.com",
      "api_key": "..."
    },
    "local": {
      "endpoint": "http://localhost:11434",
      "model": "mistral"
    }
  },
  "databases": {
    "poc_database": "${adb_admin_credential}@tmbladbdedicated_high?TNS_ADMIN=/Users/XYZ/Downloads/Wallet_TmblAdbDedicated",
    "poc_database2": "admin/XYZ@//10.X.X:1521,10..X.X:1521,10..X.X:1521/CM800000TD_low.atp.oraclecloud.com"
  },
  "rag": {
    "enabled": true,
    "database": {
      "connection_string": "XXX",
      "db_schema": "XXX",
      "tables": {
        "records": "hitl_records",
        "embeddings": "hitl_embeddings"
      },
      "connection_pool_size": 3,
      "connection_timeout": 15
    },
    "embedding": {
      "provider_type": "oracle_onnx",
      "model_name": "ALL_MINILM_L12_V2",
      "model_version": "1.0",
      "dimension": 384,
      "batch_size": 5
    },
    "default_k": 3,
    "max_k": 10,
    "min_relevance_score": 0.5,
    "search_timeout": 15,
    "enable_hybrid_search": true,
    "enable_mmr": false,
    "enable_learning": true,
    "enable_validation": true,
    "enable_enhancement": true,
    "log_level": "DEBUG",
    "cache_size": 100
  },
  "performance": {
    "query_duration_warning_ms": 1500,
    "query_duration_error_ms": 7500,
    "cache_hit_rate_minimum": 0.6,
    "memory_usage_warning": 0.85,
    "cpu_usage_warning": 0.9
  },
  "parallel": {
    "max_concurrent_queries": 8,
    "query_timeout_seconds": 45,
    "max_retries_per_query": 3,
    "enable_priority_queuing": false,
    "enable_result_caching": false,
    "enable_adaptive_concurrency": false,
    "min_concurrent_queries": 2
  },
  "batch": {
    "vector_db_batch_size": 15,
    "mcp_batch_size": 8
  },
  "vector_index": {
    "type": "ivf",
    "metric": "cosine",
    "m": 32,
    "ef_construction": 300,
    "ef_search": 128
  }
}
